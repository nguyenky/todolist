{
    "name": "root/todolist-app",
    "authors": [
        {
            "name": "Nguyen Ky",
            "email": "lenguyenky1801@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "squizlabs/php_codesniffer": "*"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "helpers/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint" : [
            "phpcs --standard=PSR2 ./app"
        ],
        "test": [
            "php bin/phpunit"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2"
    }
}
